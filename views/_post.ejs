<li id="post <%= post._id %>">

    <p>
           <% if(locals.user && locals.user.id==i.user.id){%>
            <small><a class="delete-post-button" href="/post/destroy/<%= i.id%>">X</a></small>
            <%}%>
            <%=i.content %>
                    <br>
                    <small>
                    <%=i.user.name%>
                    </small>
                    <br>
                    <small> 
                    
                        <% if (locals.user){ %>
                            <a class="toggle-like-button" data-likes="<%= i.likes.length %>" href="/likes/toggle/?id=<%=i._id%>&type=Post">
                                <%= i.likes.length %>       Likes
                            </a>
                            <a href="/likes/toggle">Hlloo</a>
                        <% }else{ %>
                            <%= i.likes.length %> Likes
                        <% } %>
                    </small>
                    <!-- <h1> <%=i.comments%></h1> -->
            </p>
            <div class="post-comments">
                    <%if(locals.user){ %>
                            <form action="/comments/create" method="POST">
    <input type="text" name="content" placeholder="Type here to Comment...." required>
                    
    <input type="hidden" name="post" value="<%=i._id%>">
     
    <input type="submit" value="Add Comment">
                            </form>

                            <% } %>
    <div class="post-comments-list">
            <ul id="post-comments-<%= i._id%>">
            
            <%for (cmnt of i.comments){%>
             
                <%- include('_comment') -%>
            <%}%>
            </ul>
    </div>
</div>

    </li>